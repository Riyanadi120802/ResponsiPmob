<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="307dp"
        android:layout_height="235dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-59dp"
        android:foregroundGravity="center"
        android:src="@drawable/elemen1_"
        android:layout_centerHorizontal="true"
        android:id="@+id/elemen1">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang :)"
        android:layout_below="@+id/elemen1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/kata"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Login"
        android:layout_below="@+id/kata"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#4D4D4D"
        android:fontFamily="@font/poppinsmedium"
        android:id="@+id/kata2"
        android:layout_centerHorizontal="true">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/kata2"
        android:id="@+id/form"
        android:padding="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint="Masukkan Username"></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Pasword"></EditText>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:width="200dp"
        android:text="Login"
        android:layout_below="@id/form"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true">

    </Button>

    <ImageView
        android:layout_width="99dp"
        android:layout_height="83dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:src="@drawable/login">

    </ImageView>
</RelativeLayout>